<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Isi Konten -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Banner Gambar -->
            <ImageView
                android:id="@+id/bannerGuru"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/bg_header"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp" />

            <!-- Search -->
            <EditText
                android:id="@+id/searchGuru"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Cari guru..."
                android:drawableStart="@android:drawable/ic_menu_search"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="16dp"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:background="@drawable/bg_edittext" />

            <!-- Kategori: Favorite & Terbaik -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/layoutFavorit"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_card_shadow">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_favorite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorite"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/layoutTerbaik"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_card_shadow">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terbaik"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Judul -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilihan Guru Terlaris"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGuru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>