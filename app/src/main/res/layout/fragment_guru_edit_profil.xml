<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuruPage.profil.guru_edit_profil">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile.EditProfile">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#75A9E9"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_back"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <!-- Avatar -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/avatar1"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless" />

                    <!-- Overlay untuk menunjukkan bahwa gambar bisa diklik -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_camera"
                        android:layout_alignEnd="@id/ivAvatar"
                        android:layout_alignBottom="@id/ivAvatar"
                        android:background="@drawable/circle_background"
                        android:padding="4dp"
                        android:scaleType="centerInside" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvGantiFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ganti Foto"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textColor="#1976D2"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />

                <!-- Nama -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="24dp" />

                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan nama lengkap"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:inputType="textPersonName" />

                <!-- Jenis Kelamin -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp" />

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="8dp"
                    android:entries="@array/gender_list" />

                <!-- Pendidikan Terakhir -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendidikan Terakhir"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contoh: S1 Pendidikan - Politeknik Caltex Riau"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:inputType="textCapSentences" />


                <!-- Bio Singkat -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio Singkat"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etBio"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Ceritakan sedikit tentang diri Anda sebagai guru..."
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:scrollbars="vertical" />

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan email"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:inputType="textEmailAddress" />

                <!-- Nomor HP -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Handphone"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan nomor handphone"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:inputType="phone" />

                <!-- Tombol Simpan -->
                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#1976D2" />
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</FrameLayout>