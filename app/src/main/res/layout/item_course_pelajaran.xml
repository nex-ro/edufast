<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Course Image -->
        <ImageView
            android:id="@+id/iv_course_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar1"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner_8dp" />

        <!-- Course Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Course Name -->
            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IELTS PASTI BERHASIL"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Subject and Level -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="12sp"
                    android:textColor="@color/primary_color"
                    android:background="@drawable/subject_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMA"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/level_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Course Type and Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_person"
                    android:tint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_course_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privat"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="4dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_time"
                    android:tint="@android:color/darker_gray"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 jam"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:tint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="rumah client, Pekanbaru"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Date and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/07/2025"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="4dp" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:25"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Price, Status, and Message Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp 300,000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktif"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/status_active_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesan"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/message_button_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
