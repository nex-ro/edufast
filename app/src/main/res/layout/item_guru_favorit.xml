<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Avatar Guru -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar1"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_guru"
            android:scaleType="centerCrop" />

        <!-- Informasi Guru -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Guru"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvMapel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mata Pelajaran"
                android:textSize="14sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvdomisili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pekanbaru"
                android:textSize="14sp"
                android:textColor="#666666" />


            <!-- Garis horizontal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#333333" />
            </LinearLayout>

            <!-- Universitas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_schools" />

                <TextView
                    android:id="@+id/tvUniversitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Universitas"
                    android:textColor="#888888"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Favorit & Jarak -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical">

            <!-- Jumlah Favorit -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_group" />

                <TextView
                    android:id="@+id/tvFavorit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="64"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Jarak -->

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
