<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beri Ulasan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_card_guru"
            android:elevation="4dp"
            android:backgroundTint="#FFFFFF"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/imgGuru"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/avatar1"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anika Rahman"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtMapel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahasa Inggris"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="#DDDDDD" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_schools"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/txtKampus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Universitas Indonesia"
                        android:textColor="#444444"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beri Bintang"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F4F4F4"
            android:padding="16dp"
            android:layout_marginBottom="30dp"
            android:elevation="2dp"
            android:clipToPadding="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beri Komentar"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etKomentar"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:hint="Ketik komentarmu disini"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:background="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>
