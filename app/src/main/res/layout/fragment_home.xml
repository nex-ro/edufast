<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F7F9FC">

        <!-- Header Welcome -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg_header_rounded">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_guru"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hai, Vetra!"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sudah siap untuk belajar?"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Search -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="16dp"
            android:hint="Cari pelajaran atau guru..."
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:background="@drawable/edittext_background"
            android:textColor="#000"
            android:textColorHint="#888" />

        <!-- Menu Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginBottom="24dp">

            <!-- Pelajaran -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuPelajaran"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_guru"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pelajaran"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Guru -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuGuru"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_guru"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guru"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Kursus Saya -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuKursus"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_kursus"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kursus Saya"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guru dengan rating jempolan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

        <!-- List Guru -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGuru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
