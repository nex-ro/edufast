<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GuruPage.profil.Password">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ubah Password"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black" />



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan password lama dan password baru untuk mengubah password Anda"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Current Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Saat Ini"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_current_password"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/input_background"
                    android:hint="Masukkan password saat ini"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:paddingEnd="48dp"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_toggle_current_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_visibility_off"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

            </RelativeLayout>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- New Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Baru"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/primary_color"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/input_background"
                    android:hint="Masukkan password baru (min. 6 karakter)"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:paddingEnd="48dp"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_toggle_new_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_visibility_off"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

            </RelativeLayout>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Password Baru"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:boxStrokeColor="@color/primary_color"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/input_background"
                    android:hint="Konfirmasi password baru"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:paddingEnd="48dp"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_toggle_confirm_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_visibility_off"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

            </RelativeLayout>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Change Password Button -->
        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Ubah Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:layout_marginBottom="16dp" />

        <!-- Password Requirements -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Persyaratan Password:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Minimal 6 karakter\n• Berbeda dengan password lama\n• Pastikan mudah diingat tapi sulit ditebak"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>

</ScrollView>